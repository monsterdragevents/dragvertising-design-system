{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "border": {
    "radius": {
      "none": {
        "$type": "dimension",
        "$value": "0",
        "$description": "No border radius - sharp corners"
      },
      "sm": {
        "$type": "dimension",
        "$value": "0.375rem",
        "$description": "6px - Small radius (calculated from --radius - 4px)"
      },
      "md": {
        "$type": "dimension",
        "$value": "0.5rem",
        "$description": "8px - Medium radius (calculated from --radius - 2px)"
      },
      "lg": {
        "$type": "dimension",
        "$value": "0.75rem",
        "$description": "12px - Base radius (--radius)"
      },
      "xl": {
        "$type": "dimension",
        "$value": "1rem",
        "$description": "16px - Large radius"
      },
      "2xl": {
        "$type": "dimension",
        "$value": "1.5rem",
        "$description": "24px - Extra large radius"
      },
      "3xl": {
        "$type": "dimension",
        "$value": "2rem",
        "$description": "32px - XXL radius"
      },
      "full": {
        "$type": "dimension",
        "$value": "9999px",
        "$description": "Full radius - pills, circles"
      }
    },
    "width": {
      "default": {
        "$type": "dimension",
        "$value": "1px",
        "$description": "Default border width"
      },
      "0": {
        "$type": "dimension",
        "$value": "0",
        "$description": "No border"
      },
      "2": {
        "$type": "dimension",
        "$value": "2px",
        "$description": "Thick border"
      },
      "4": {
        "$type": "dimension",
        "$value": "4px",
        "$description": "Extra thick border"
      },
      "8": {
        "$type": "dimension",
        "$value": "8px",
        "$description": "Very thick border"
      }
    },
    "style": {
      "solid": {
        "$type": "other",
        "$value": "solid",
        "$description": "Solid border style"
      },
      "dashed": {
        "$type": "other",
        "$value": "dashed",
        "$description": "Dashed border style"
      },
      "dotted": {
        "$type": "other",
        "$value": "dotted",
        "$description": "Dotted border style"
      },
      "none": {
        "$type": "other",
        "$value": "none",
        "$description": "No border"
      }
    }
  }
}

