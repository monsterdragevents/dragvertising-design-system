{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "typography": {
    "font-family": {
      "sans": {
        "$type": "fontFamily",
        "$value": [
          "system-ui",
          "-apple-system",
          "BlinkMacSystemFont",
          "SF Pro Display",
          "SF Pro Text",
          "Segoe UI",
          "Roboto",
          "Helvetica Neue",
          "Arial",
          "sans-serif"
        ],
        "$description": "Default sans-serif font stack - SF Pro on Apple devices"
      },
      "serif": {
        "$type": "fontFamily",
        "$value": [
          "ui-serif",
          "Apple Color Emoji",
          "Segoe UI Emoji",
          "Times New Roman",
          "Times",
          "serif"
        ],
        "$description": "Serif font stack for body copy (legacy)"
      },
      "display": {
        "$type": "fontFamily",
        "$value": [
          "system-ui",
          "-apple-system",
          "BlinkMacSystemFont",
          "SF Pro Display",
          "SF Pro Text",
          "Segoe UI",
          "Roboto",
          "Helvetica Neue",
          "Arial",
          "sans-serif"
        ],
        "$description": "Display font for large headlines"
      },
      "londrina": {
        "$type": "fontFamily",
        "$value": ["Londrina Solid", "cursive"],
        "$description": "Special heading font for drag culture aesthetic"
      }
    },
    "font-size": {
      "xs": {
        "$type": "dimension",
        "$value": "0.75rem",
        "$description": "12px - Captions, labels, timestamps"
      },
      "sm": {
        "$type": "dimension",
        "$value": "0.875rem",
        "$description": "14px - Small body text"
      },
      "base": {
        "$type": "dimension",
        "$value": "1rem",
        "$description": "16px - Default body text"
      },
      "lg": {
        "$type": "dimension",
        "$value": "1.125rem",
        "$description": "18px - Large body text"
      },
      "xl": {
        "$type": "dimension",
        "$value": "1.25rem",
        "$description": "20px - Subheadings"
      },
      "2xl": {
        "$type": "dimension",
        "$value": "1.5rem",
        "$description": "24px - Heading 3"
      },
      "3xl": {
        "$type": "dimension",
        "$value": "1.875rem",
        "$description": "30px - Heading 2"
      },
      "4xl": {
        "$type": "dimension",
        "$value": "2.25rem",
        "$description": "36px - Heading 1"
      },
      "5xl": {
        "$type": "dimension",
        "$value": "3rem",
        "$description": "48px - Display large"
      },
      "6xl": {
        "$type": "dimension",
        "$value": "3.75rem",
        "$description": "60px - Hero text"
      },
      "7xl": {
        "$type": "dimension",
        "$value": "4.5rem",
        "$description": "72px - Hero large text"
      }
    },
    "font-weight": {
      "regular": {
        "$type": "fontWeight",
        "$value": "400",
        "$description": "Regular weight - body copy, descriptions"
      },
      "semibold": {
        "$type": "fontWeight",
        "$value": "600",
        "$description": "Semibold - headings, emphasis, UI elements"
      },
      "bold": {
        "$type": "fontWeight",
        "$value": "700",
        "$description": "Bold - strong emphasis, special callouts"
      }
    },
    "line-height": {
      "tight": {
        "$type": "number",
        "$value": 1.25,
        "$description": "Tight line height - headings"
      },
      "snug": {
        "$type": "number",
        "$value": 1.375,
        "$description": "Snug line height - subheadings"
      },
      "normal": {
        "$type": "number",
        "$value": 1.5,
        "$description": "Normal line height - default"
      },
      "relaxed": {
        "$type": "number",
        "$value": 1.625,
        "$description": "Relaxed line height - body copy"
      },
      "loose": {
        "$type": "number",
        "$value": 1.75,
        "$description": "Loose line height - readable paragraphs"
      }
    },
    "letter-spacing": {
      "tight": {
        "$type": "dimension",
        "$value": "-0.02em",
        "$description": "Tight tracking - headlines"
      },
      "normal": {
        "$type": "dimension",
        "$value": "0",
        "$description": "Normal tracking - default"
      },
      "wide": {
        "$type": "dimension",
        "$value": "0.025em",
        "$description": "Wide tracking - emphasis"
      }
    }
  }
}

