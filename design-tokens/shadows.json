{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "shadows": {
    "elevation": {
      "sm": {
        "$type": "shadow",
        "$value": {
          "color": "rgba(0, 0, 0, 0.05)",
          "offsetX": "0",
          "offsetY": "1px",
          "blur": "3px",
          "spread": "0"
        },
        "$description": "Subtle lift - cards, buttons"
      },
      "md": {
        "$type": "shadow",
        "$value": {
          "color": "rgba(0, 0, 0, 0.1)",
          "offsetX": "0",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "-1px"
        },
        "$description": "Moderate elevation - dropdowns, tooltips"
      },
      "lg": {
        "$type": "shadow",
        "$value": {
          "color": "rgba(0, 0, 0, 0.1)",
          "offsetX": "0",
          "offsetY": "10px",
          "blur": "15px",
          "spread": "-3px"
        },
        "$description": "High elevation - modals, sheets"
      },
      "xl": {
        "$type": "shadow",
        "$value": {
          "color": "rgba(0, 0, 0, 0.15)",
          "offsetX": "0",
          "offsetY": "20px",
          "blur": "25px",
          "spread": "-5px"
        },
        "$description": "Dramatic elevation - hero cards, featured content"
      },
      "2xl": {
        "$type": "shadow",
        "$value": {
          "color": "rgba(0, 0, 0, 0.25)",
          "offsetX": "0",
          "offsetY": "25px",
          "blur": "50px",
          "spread": "-12px"
        },
        "$description": "Maximum elevation - overlays, full-screen modals"
      }
    },
    "glow": {
      "primary": {
        "$type": "shadow",
        "$value": "0 0 40px hsl(280 85% 50% / 0.3)",
        "$description": "Primary purple glow effect"
      },
      "primary-strong": {
        "$type": "shadow",
        "$value": "0 0 50px hsl(280 85% 60% / 0.5)",
        "$description": "Stronger primary glow for dark mode"
      },
      "secondary": {
        "$type": "shadow",
        "$value": "0 0 30px hsl(45 100% 55% / 0.3)",
        "$description": "Secondary golden glow effect"
      },
      "secondary-strong": {
        "$type": "shadow",
        "$value": "0 0 40px hsl(45 100% 60% / 0.5)",
        "$description": "Stronger secondary glow for dark mode"
      },
      "golden": {
        "$type": "shadow",
        "$value": "0 0 30px hsl(38 100% 57% / 0.3)",
        "$description": "Golden glow effect"
      },
      "golden-strong": {
        "$type": "shadow",
        "$value": "0 0 40px hsl(38 100% 65% / 0.5)",
        "$description": "Stronger golden glow for dark mode"
      },
      "pink": {
        "$type": "shadow",
        "$value": "0 0 30px rgba(253, 2, 144, 0.3)",
        "$description": "Brand pink glow effect"
      },
      "pink-strong": {
        "$type": "shadow",
        "$value": "0 0 40px rgba(253, 2, 144, 0.5)",
        "$description": "Stronger pink glow for dark mode"
      }
    },
    "inner": {
      "sm": {
        "$type": "shadow",
        "$value": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.05)",
        "$description": "Subtle inner shadow"
      },
      "md": {
        "$type": "shadow",
        "$value": "inset 0 2px 6px 0 rgba(0, 0, 0, 0.1)",
        "$description": "Moderate inner shadow"
      }
    }
  }
}

